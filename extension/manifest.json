{
  "manifest_version": 2,
  "name": "RandomID Extension",
  "version": "1.0",
  "description": "Generate and display a random ID",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
              "firebase-app.js",
              "firebase-database.js",
              "jquery.min.js"

    
    ]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]}
  ],
  "web_accessible_resources": [
    "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js",
    "https://www.gstatic.com/firebasejs/8.8.1/firebase-app.js",
    "https://www.gstatic.com/firebasejs/8.8.1/firebase-database.js"
  ],  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon_48.png"
  },
  "icons": {
    "48": "icon_48.png"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://*.firebaseio-demo.com; object-src 'self'"
}
